{
  "name": "@pigi/example-rollup",
  "version": "0.0.1-alpha.1",
  "description": "Example rollup project",
  "main": "build/index.js",
  "files": [
    "build/**/.js"
  ],
  "scripts": {
    "lint": "tslint --format stylish --project .",
    "fix": "prettier --config ./.prettierrc.js --write 'index.ts' '{src,test}/**/*.ts'",
    "build": "tsc -p . && browserify index.ts -p [ tsify ] > public/bundle.js",
    "serve": "http-server ./public",
    "aggregator": "node ./build/src/mock-aggregator.js",
    "clean": "rimraf build/"
  },
  "keywords": [
    "plasma",
    "group",
    "example",
    "rollup"
  ],
  "author": "PG",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/plasma-group/pigi.git"
  },
  "dependencies": {
    "@pigi/core": "^0.0.1-alpha.1",
    "@pigi/wallet": "^0.0.1-alpha.1",
    "cors": "^2.8.5",
    "http-server": "^0.11.1"
  },
  "devDependencies": {
    "@pigi/core": "^0.0.1-alpha.1",
    "@pigi/prettier-config": "^0.0.2-alpha.2",
    "@types/chai": "^4.1.7",
    "@types/debug": "^4.1.2",
    "@types/mocha": "^5.2.6",
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "debug": "^4.1.1",
    "memdown": "^5.0.0",
    "mocha": "^6.1.2",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.3",
    "tsify": "^4.0.1",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
